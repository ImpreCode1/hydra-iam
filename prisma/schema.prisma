generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   @map("password_hash")
  isActive Boolean @default(true)

  positionId String @map("cargo_id")
  position   Position @relation(fields: [positionId], references: [id])
  roles UserRole[]


  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Position {
  id          String   @id @default(uuid())
  name        String
  description String?

  roles PositionRole[]
  users User[]

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("positions")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?

  positions PositionRole[]
  users UserRole[]
  platforms PlatformRole[]


  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("roles")
}

model Platform {
  id          String   @id @default(uuid())
  name        String
  code        String
  description String?
  url         String
  isActive Boolean @default(true)

  roles PlatformRole[]

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("platforms")
}

model UserRole {
  userId String @map("usuario_id")
  roleId String @map("rol_id")

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
  @@map("usuario_rol")
}

model PositionRole {
  positionId String @map("cargo_id")
  roleId     String @map("rol_id")

  position Position @relation(fields: [positionId], references: [id])
  role     Role     @relation(fields: [roleId], references: [id])

  @@id([positionId, roleId])
  @@map("cargo_rol")
}

model PlatformRole {
  platformId String @map("plataforma_id")
  roleId     String @map("rol_id")

  platform Platform @relation(fields: [platformId], references: [id])
  role     Role     @relation(fields: [roleId], references: [id])

  @@id([platformId, roleId])
  @@map("plataforma_rol")
}
