generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?  @map("password_hash") // Opcional (por si algún día se necesita local)
  azureOid  String?  @unique @map("azure_oid")

  isActive  Boolean  @default(true)
  deletedAt DateTime? @map("deleted_at")

  positionId String? @map("cargo_id")
  position   Position? @relation(fields: [positionId], references: [id])

  roles      UserRole[]
  refreshTokens RefreshToken[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([email])
  @@index([azureOid])
  @@index([positionId])
  @@map("users")
}

model Position {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?

  deletedAt DateTime? @map("deleted_at")

  roles PositionRole[]
  users User[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("positions")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?

  deletedAt DateTime? @map("deleted_at")

  positions PositionRole[]
  users     UserRole[]
  platforms PlatformRole[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("roles")
}

model Platform {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique
  description String?
  url         String
  logoUrl     String?  @map("logo_url")
  isActive    Boolean  @default(true)

  deletedAt DateTime? @map("deleted_at")

  roles PlatformRole[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([code])
  @@map("platforms")
}

model UserRole {
  userId String @map("usuario_id")
  roleId String @map("rol_id")

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
  @@map("usuario_rol")
}

model PositionRole {
  positionId String @map("cargo_id")
  roleId     String @map("rol_id")

  position Position @relation(fields: [positionId], references: [id])
  role     Role     @relation(fields: [roleId], references: [id])

  @@id([positionId, roleId])
  @@map("cargo_rol")
}

model PlatformRole {
  platformId String @map("plataforma_id")
  roleId     String @map("rol_id")

  platform Platform @relation(fields: [platformId], references: [id])
  role     Role     @relation(fields: [roleId], references: [id])

  @@id([platformId, roleId])
  @@map("plataforma_rol")
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @map("token_hash")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  isRevoked Boolean  @default(false)
  expiresAt DateTime @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("refresh_tokens")
}
