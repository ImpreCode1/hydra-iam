APP_NAME=Hydra IAM
APP_ENV=local
APP_PORT=3000

DATABASE_URL=postgresql://hydra:hydra@postgres:5432/hydra_iam

JWT_SECRET=changeme
JWT_EXPIRES_IN=15m

# Microsoft Entra ID (Azure AD)
# Opciones: "common" (multi-tenant) o tu Tenant ID (GUID) de Azure Portal > Entra ID > Información general
AZURE_TENANT_ID=common
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
# Debe coincidir con la Redirect URI configurada en Entra ID
AZURE_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Claves para encriptar cookies (OIDC sin sesiones). key=32 chars, iv=12 chars
COOKIE_ENCRYPTION_KEY=01234567890123456789012345678901
COOKIE_ENCRYPTION_IV=012345678901

# URL del frontend para redirigir después del login (opcional)
FRONTEND_URL=http://localhost:3000
